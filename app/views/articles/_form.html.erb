
<%= form_with model: @article, local: true do |form| %>


  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.text_area :price %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>

<%= link_to 'Back', articles_path %>